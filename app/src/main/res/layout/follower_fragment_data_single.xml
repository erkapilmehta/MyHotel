<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFF">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/listview_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_image_list"
                />
            <TextView
                android:id="@+id/follower_listview_id_info"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:gravity="center"
                android:text="ID :"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/follower_listview_id"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </TableRow>

    </LinearLayout>
    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/follower_listview_username_info"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center"
            android:textSize="15dp"
            android:text="UserName :"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/follower_listview_username"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/follower_listview_timezone_info"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Timezone :"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/follower_listview_timezone"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </TableRow>
</TableLayout>
